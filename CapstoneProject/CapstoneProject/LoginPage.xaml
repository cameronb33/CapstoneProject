<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneProject.LoginPage" BackgroundColor="#FFFFFF">
    
    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="6" HeightRequest="35" BackgroundColor="#0192B1" HasShadow="False">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Login" FontSize="30" HorizontalOptions="CenterAndExpand" TextColor="#FFFFFF"/>
                  </StackLayout>

            </Frame>

            <Frame Padding="5"  Margin="30">
                <Entry Placeholder="Login"  FontSize="30" ClearButtonVisibility="WhileEditing" x:Name="LoginAttempt"/>
                
            </Frame>

            <Frame Padding="5" Margin="30">
                <Entry Placeholder="Password" FontSize="30" ClearButtonVisibility="WhileEditing" x:Name="Passwordattempt"/>
            </Frame>

            <Button BorderWidth="5" CharacterSpacing="2" BackgroundColor="#0192B1" Margin="50" Text="Submit" TextColor="White" FontAttributes="Bold" Font="30"  Clicked="SubmitAttempt"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>